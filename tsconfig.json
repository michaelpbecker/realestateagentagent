{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "paths": {
      "#shared/*": ["./shared/dist/*"]
    }
  },
  "include": ["client", "shared"],
  "exclude": ["node_modules", "server"]
}
